{
  "name": "ecommerce-api",
  "version": "1.0.0",
  "description": "E-commerce API with Node.js, TypeScript, and SQLite",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "init-db": "ts-node src/database/init.ts",
    "pm2:start": "pm2 start ecosystem.config.js --only ecommerce-api",
    "pm2:dev": "pm2 start ecosystem.config.js --only ecommerce-api-dev",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:headed": "playwright test --headed"
  },
  "keywords": [
    "api",
    "ecommerce",
    "nodejs",
    "typescript",
    "sqlite"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "pm2": "^6.0.13",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
